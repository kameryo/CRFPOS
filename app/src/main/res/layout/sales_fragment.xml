<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/darker_gray">

    <TextView
        android:id="@+id/textView_adult"
        android:layout_width="110dp"
        android:layout_height="90dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="30dp"
        android:background="@android:color/darker_gray"
        android:gravity="center"
        android:text="@string/adult"
        android:textColor="@color/black"
        android:textSize="40sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/adult_num"
        android:layout_width="110dp"
        android:layout_height="90dp"
        android:layout_marginTop="30dp"
        android:background="@color/white"
        android:gravity="center"
        android:textColor="@color/black"
        android:textSize="48sp"
        app:layout_constraintStart_toEndOf="@+id/textView_adult"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView_child"
        android:layout_width="110dp"
        android:layout_height="90dp"
        android:layout_marginTop="30dp"
        android:background="@android:color/darker_gray"
        android:gravity="center"
        android:text="@string/child"
        android:textColor="@color/black"
        android:textSize="40sp"
        app:layout_constraintStart_toEndOf="@+id/adult_num"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/child_num"
        android:layout_width="110dp"
        android:layout_height="90dp"
        android:layout_marginTop="30dp"
        android:background="@color/white"
        android:gravity="center"
        android:textColor="@color/black"
        android:textSize="48sp"
        app:layout_constraintStart_toEndOf="@+id/textView_child"
        app:layout_constraintTop_toTopOf="parent" />


    <GridLayout
        android:id="@+id/gridLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="200dp"
        android:layout_marginEnd="32dp"
        android:columnCount="7"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <Button
            android:id="@+id/adult1"
            android:layout_width="110dp"
            android:layout_height="80dp"
            android:layout_row="0"
            android:layout_column="0"
            android:backgroundTint="@color/white"
            android:insetLeft="2dp"
            android:insetTop="2dp"
            android:insetRight="2dp"
            android:insetBottom="2dp"
            android:text="@string/adult1"
            android:textColor="@color/black"
            android:textSize="24sp" />


        <Button
            android:id="@+id/adult2"
            android:layout_width="110dp"
            android:layout_height="80dp"
            android:layout_row="0"
            android:layout_column="1"
            android:backgroundTint="@color/white"
            android:insetLeft="2dp"
            android:insetTop="2dp"
            android:insetRight="2dp"
            android:insetBottom="2dp"
            android:text="@string/adult2"
            android:textColor="@color/black"
            android:textSize="24sp" />

        <Button
            android:id="@+id/adult3"
            android:layout_width="110dp"
            android:layout_height="80dp"
            android:layout_row="0"
            android:layout_column="2"
            android:backgroundTint="@color/white"
            android:insetLeft="2dp"
            android:insetTop="2dp"
            android:insetRight="2dp"
            android:insetBottom="2dp"
            android:text="@string/adult3"
            android:textColor="@color/black"
            android:textSize="24sp" />

        <Button
            android:id="@+id/adult4"
            android:layout_width="110dp"
            android:layout_height="80dp"
            android:layout_row="0"
            android:layout_column="3"
            android:backgroundTint="@color/white"
            android:insetLeft="2dp"
            android:insetTop="2dp"
            android:insetRight="2dp"
            android:insetBottom="2dp"
            android:text="@string/adult4"
            android:textColor="@color/black"
            android:textSize="24sp" />

        <Button
            android:id="@+id/adult0"
            android:layout_width="110dp"
            android:layout_height="80dp"
            android:layout_row="0"
            android:layout_column="4"
            android:backgroundTint="@color/white"
            android:insetLeft="2dp"
            android:insetTop="2dp"
            android:insetRight="2dp"
            android:insetBottom="2dp"
            android:text="@string/adult0"
            android:textColor="@color/black"
            android:textSize="24sp" />


        <EditText
            android:id="@+id/editAdultNum"
            android:layout_width="50dp"
            android:layout_height="80dp"
            android:layout_row="0"
            android:layout_column="5"
            android:ems="2"
            android:inputType="number"
            android:insetLeft="2dp"
            android:insetTop="2dp"
            android:insetRight="2dp"
            android:insetBottom="2dp"
            android:textSize="24sp" />

        <Button
            android:id="@+id/adult_input"
            android:layout_width="100dp"
            android:layout_height="80dp"
            android:layout_row="0"
            android:layout_column="6"
            android:layout_gravity="right"
            android:backgroundTint="@color/white"
            android:insetLeft="2dp"
            android:insetTop="2dp"
            android:insetRight="2dp"
            android:insetBottom="2dp"
            android:text="入力"
            android:textColor="@color/black"
            android:textSize="24sp" />

        <Button
            android:id="@+id/child1"
            android:layout_width="110dp"
            android:layout_height="80dp"
            android:layout_row="1"
            android:layout_column="0"
            android:backgroundTint="@color/white"
            android:insetLeft="2dp"
            android:insetTop="2dp"
            android:insetRight="2dp"
            android:insetBottom="2dp"
            android:text="@string/child1"
            android:textColor="@color/black"
            android:textSize="24sp" />

        <Button
            android:id="@+id/child2"
            android:layout_width="110dp"
            android:layout_height="80dp"
            android:layout_row="1"
            android:layout_column="1"
            android:backgroundTint="@color/white"
            android:insetLeft="2dp"
            android:insetTop="2dp"
            android:insetRight="2dp"
            android:insetBottom="2dp"
            android:text="@string/child2"
            android:textColor="@color/black"
            android:textSize="24sp" />

        <Button
            android:id="@+id/child3"
            android:layout_width="110dp"
            android:layout_height="80dp"
            android:layout_row="1"
            android:layout_column="2"
            android:backgroundTint="@color/white"
            android:insetLeft="2dp"
            android:insetTop="2dp"
            android:insetRight="2dp"
            android:insetBottom="2dp"
            android:text="@string/child3"
            android:textColor="@color/black"
            android:textSize="24sp" />

        <Button
            android:id="@+id/child4"
            android:layout_width="110dp"
            android:layout_height="80dp"
            android:layout_row="1"
            android:layout_column="3"
            android:backgroundTint="@color/white"
            android:insetLeft="2dp"
            android:insetTop="2dp"
            android:insetRight="2dp"
            android:insetBottom="2dp"
            android:text="@string/child4"
            android:textColor="@color/black"
            android:textSize="24sp" />

        <Button
            android:id="@+id/child0"
            android:layout_width="110dp"
            android:layout_height="80dp"
            android:layout_row="1"
            android:layout_column="4"
            android:backgroundTint="@color/white"
            android:insetLeft="2dp"
            android:insetTop="2dp"
            android:insetRight="2dp"
            android:insetBottom="2dp"
            android:text="@string/child0"
            android:textColor="@color/black"
            android:textSize="24sp" />

        <EditText
            android:id="@+id/editChildNum"
            android:layout_width="50dp"
            android:layout_height="80dp"
            android:layout_row="1"
            android:layout_column="5"
            android:ems="2"
            android:inputType="number"
            android:insetLeft="2dp"
            android:insetTop="2dp"
            android:insetRight="2dp"
            android:insetBottom="2dp"
            android:textSize="24sp" />

        <Button
            android:id="@+id/child_input"
            android:layout_width="100dp"
            android:layout_height="80dp"
            android:layout_row="1"
            android:layout_column="6"
            android:layout_gravity="right"
            android:backgroundTint="@color/white"
            android:insetLeft="2dp"
            android:insetTop="2dp"
            android:insetRight="2dp"
            android:insetBottom="2dp"
            android:text="入力"
            android:textColor="@color/black"
            android:textSize="24sp" />


    </GridLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/stock_list_recycler"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="32dp"
        android:layout_marginRight="32dp"
        android:layout_marginBottom="32dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="@id/gridLayout"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/gridLayout" />

    <Button
        android:id="@+id/adjustment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="32dp"
        android:text="清算"
        android:textSize="60sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/subtotal_fare"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="32dp"
        android:text="運賃"
        android:textColor="@color/black"
        android:textSize="30sp"
        app:layout_constraintStart_toEndOf="@+id/textView6"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/subtotal_fare2"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:text="特企"
        android:textColor="@color/black"
        android:textSize="30sp"
        app:layout_constraintStart_toEndOf="@+id/textView11"
        app:layout_constraintTop_toTopOf="@+id/textView11" />

    <TextView
        android:id="@+id/subtotal_goods"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:text="物販"
        android:textColor="@color/black"
        android:textSize="30sp"
        app:layout_constraintStart_toEndOf="@+id/textView12"
        app:layout_constraintTop_toTopOf="@+id/textView12" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/goods_selected"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="32dp"
        android:layout_marginBottom="32dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/gridLayout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView_adult" />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="224dp"
        android:layout_marginTop="12dp"
        android:text="特企"
        android:textColor="@color/black"
        android:textSize="30sp"
        app:layout_constraintStart_toStartOf="@+id/gridLayout"
        app:layout_constraintTop_toBottomOf="@+id/textView6" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="224dp"
        android:layout_marginTop="32dp"
        android:text="運賃"
        android:textColor="@color/black"
        android:textSize="30sp"
        app:layout_constraintStart_toStartOf="@+id/gridLayout"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="224dp"
        android:layout_marginTop="10dp"
        android:text="物販"
        android:textColor="@color/black"
        android:textSize="30sp"
        app:layout_constraintStart_toStartOf="@+id/gridLayout"
        app:layout_constraintTop_toBottomOf="@+id/textView11" />

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="特企券選択"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="@+id/gridLayout"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>